#include <zephyr/dt-bindings/gpio/gpio.h>

&mikrobus_uart {
	status = "okay";
	current-speed = <9600>;

	modbus0: modbus0 {
		compatible = "zephyr,modbus-serial";
		status = "okay";
		/* RS485 Isolator 5 Click: DE=AN, RE=RST */
		de-gpios = <&mikrobus_header 0 GPIO_ACTIVE_HIGH>;
		re-gpios = <&mikrobus_header 1 GPIO_ACTIVE_LOW>;
	};
};
